{
    "tasks": [
        {
            "type": "shell",
            "label": "Default make",
            "command": "make",
            "args": [
                "all",
                "clean",
                "CFLAGS=\"-g3 -O0\""
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build",
            "detail": "Task generated Manually."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}